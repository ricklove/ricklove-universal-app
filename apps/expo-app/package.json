{
  "name": "expo-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "setup": "yarn",
    "start": "expo start --tunnel",
    "android": "expo start --android --tunnel",
    "ios": "expo start --ios --tunnel",
    "web": "expo start --web",
    "build": "expo export",
    "build:web": "expo export --platform web",
    "ts:check": "tsc",
    "dev0": "bun build ../../packages/app/index.ts --external react --external react-native --sourcemap=inline --outdir ./out --watch",
    "dev": "concurrently \"bun run dev:code\" \"bun run dev:theme\" \"bun run dev:styles\" \"bun run dev:styles-reload\"",
    "dev:code": "esbuild ../../packages/app/index.ts --bundle --format=esm --external:react --external:react-native --external:typescript --outfile=./src/app.gen.jsx --loader:.js=jsx --jsx=preserve --sourcemap=inline --watch",
    "dev:theme": "esbuild ../../packages/cl/src/design/tailwind/theme.ts --bundle --format=cjs --external:react --external:react-native --outfile=./src/theme.gen.js --watch",
    "dev:styles": "tailwindcss -c tailwind.config.js -o ./public/styles-web.gen.css --watch",
    "dev:styles-reload": "cd ./scripts && bun update-styles.ts --watch"
  },
  "dependencies": {
    "@expo/webpack-config": "^19.0.0",
    "expo": "~49.0.13",
    "expo-constants": "~14.4.2",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-status-bar": "~1.6.0",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.5",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.69.1",
    "autoprefixer": "^10.4.8",
    "babel-preset-expo": "^9.2.0",
    "concurrently": "^8.2.1",
    "postcss": "8.4.23",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "3.3.2",
    "typescript": "^5.1.3"
  },
  "private": true
}